    <%- include ('./partials/head.ejs') %>
    <body>
      <div class="login-page">
        <div class="form">
          <div class="col text-center">
            <h1>Create Task</h1>
          </div>
          <form class="login-form" method="post" action="/createTask" id="createTask">
            <label for="exampleFormControlTextarea1">Title</label>
                  <input type="text" name="title" class="form-control" placeholder="Task Name" required>
                  <label for="exampleFormControlTextarea1">Task Description:</label>
                  <textarea class="form-control" form="createTask" name="desc" id="exampleFormControlTextarea1" rows="3"></textarea>
                  <input type="hidden" name = "userID" value="<%=user[0].id%>">
                  <button type="submit" class="btn btn-primary mt-4">Create Task</button>
                  <a href='/lobby'>Go Back</a>
          </form>
        </div>
      </div>
    </body>
