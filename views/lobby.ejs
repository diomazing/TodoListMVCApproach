<%- include('./partials/head.ejs') %>

<body>
<section id="services" class="services section-bg">
    <div class="container">
      <div class="section-title">
        <h2>Things to do:</h2>
        <hr>
        <% var count = 0 %>
        <% for(i=0;i < tasks.length ; i++) { %>
            <% if(tasks[i].status == 'ongoing'){%>
                <% ++count %>
            <% } %>    
        <% } %>
        <p>Tasks pending today: <%= count %></p>
      </div>
    </div>
    <div class="taskscardContainer" >
        <div class="row twelve">
            <div id="card2" class="card four col" style="background-color: cadetblue;">
                <div class="wrapper">
                    <a href="/task" style="text-decoration: none;"> <div class="icon-box" style="height: 500px; width: 500px;">
                        <div class="icon">  <i class="bx bx-plus"></i></div>
                        <h4> Add new task</h4>
                        <p>A new task appears on the <br> right side of this box</p>
                  </div></a>
                </div>
              </div>
    
                <!-- <div class="col-lg-4 col-md-6 d-flex align-items-stretch mt-4 mt-md-0">
                    <div class="icon-box" style="height: 325px;width: 325px;">
                        <div class="icon"><i class="bx bx-file"></i></div>
                        <h4><a href="#">Sleep</a></h4>
                        <p>Description goes here heheheeh so </p>
                    </div>
                </div> -->
                <% for(i=0;i < tasks.length ; i++) { %>
                    <div id="card2" class="card four col">
                        <div class="header"></div>
                        <div class="wrapper">
                          <h3 class="name"><a href="#"><%= tasks[i].title %></a></h3>
                          <div class="info">
                            <p><%= tasks[i].description %></p>
                            <p> Status:&nbsp;<em> <%= tasks[i].status %></em> </p> <hr>
                            <%if(tasks[i].status == 'ongoing'){%>
                                <a href="/updateTask?id=<%= todo[i].id %>" style="color: rgba(19, 117, 30, 0.687);"><i class="bx bx-check"></i></a>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;  
                                <% } %>
                                <a href="/deleteTask?id=<%= todo[i].id %>" style="color: red;"><i class="bx bx-trash"></i></a>
                          </div>
                        </div>
                      </div>
                <% } %>
          </div>
    </div>
      
</section>
</body>
